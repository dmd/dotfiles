[core]
    excludesfile = ~/.gitignore
    editor = vim
    pager = less -FRSX
    attributesfile = ~/.gitattributes
[alias]
    co = checkout
    br = branch
    unstage = reset HEAD --
    last = log -1 HEAD
    undo = checkout --
    undocommit = reset --soft HEAD^
    d = diff
    ci = commit -a
    st = status
[push]
    default = matching
[branch]
    autosetuprebase = always
[pull]
    rebase = true

[include]
    path = ~/.gitconfig_user

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true

[diff "mp"]
  command = gitasd
